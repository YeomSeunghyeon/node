<%# 201935292 염승현 %>
<div class="container">	
	
    <% if(co == 'c'){%>
    <h2> 생성</h2>
	<form action="/board/create_process" method="post" >
        <input type = "hidden" name="type_id" value = "<%=btname%>">
        <input type = "hidden" name="loginid" value = "<%=loginid%>">
		<div class="mb-3">
			<label class="form-label" for="id">제목</label> 
			<input class="form-control" type="text" name="title" style = "width:300px;" />
		</div>
        <div class="mb-3">
			<label class="form-label" for="id">작성자</label> 
			<input class="form-control" type="text" name="user" value = "<%=who%>" style = "width:300px;" disabled/>
		</div>
        <div class="mb-3">
			<label class="form-label" for="id">내용</label> 
			<textarea class="form-control" name="content" style = "width:800px;height: 200px;" ></textarea>
		</div>
		<div class="mb-3">
			<label class="form-label" for="id">날짜</label> 
			<input class="form-control" type="text" name="date"  style = "width:300px;"/>
		</div>
        <div class="mb-3">
			<label class="form-label" for="id">갱신삭제시 비밀번호</label> 
			<input class="form-control" type="text" name="password" style = "width:300px;" />
		</div>
        <button class="btn btn-outline-primary btn-sm" type="submit">생성</button>
    
  </form>
  <% }
  else if(co=='u'){%>
	<h2> 수정</h2>
	<form action="/board/update_process" method="post" >
        <input type = "hidden" name="type_id" value = "<%=btname[0].type_id%>">
		<input type = "hidden" name="board_id" value = "<%=btname[0].board_id%>">
        <input type = "hidden" name="loginid" value = "<%=loginid%>">
		<div class="mb-3">
			<label class="form-label" for="id">제목</label> 
			<input class="form-control" type="text" name="title" style = "width:300px;" value="<%=btname[0].title%>" />
		</div>
        <div class="mb-3">
			<label class="form-label" for="id">작성자</label> 
			<input class="form-control" type="text" name="title" value = "<%=who1%>" style = "width:300px;" disabled/>
		</div>
        <div class="mb-3">
			<label class="form-label" for="id">내용</label> 
			<textarea class="form-control" name="content" style = "width:800px;height: 200px;"><%=btname[0].content%></textarea>
		</div>
        <div class="mb-3">
			<label class="form-label" for="id">갱신삭제시 비밀번호</label> 
			<input class="form-control" type="text" name="password" style = "width:300px;" />
		</div>
        <button class="btn btn-outline-primary btn-sm" type="submit">수정하기</button>
    
  </form> <%}
  else if(co=='i'){%>
        <input type = "hidden" name="type_id" value = "<%=btname[0].type_id%>">
        <input type = "hidden" name="loginid" value = "<%=loginid%>">
		<div class="mb-3">
			<label class="form-label" for="id">제목</label> 
			<input class="form-control" type="text" name="title" style = "width:300px;" value="<%=btname[0].title%>"disabled />
		</div>
        <div class="mb-3">
			<label class="form-label" for="id">작성자</label> 
			<input class="form-control" type="text" name="title" value = "<%=who1%>" style = "width:300px;" disabled/>
		</div>
        <div class="mb-3">
			<label class="form-label" for="id">내용</label> 
			<textarea class="form-control" name="content" style = "width:800px;height: 200px;"disabled><%=btname[0].content%></textarea>
		</div>
       
		<div style="float:right"><button type='button' class="btn btn-info me-md-2">목록</button>
		<% if (btname[0].loginid==nowid || class1=='01'){%>
			<button type='button' class="btn btn-info me-md-2" onclick="location.href='/board/update/<%=btname[0].board_id%>/<%=btname[0].type_id%>/<%=btname[0].p_id%>'">수정</button>
			<button type='button' class="btn btn-info me-md-2" onclick="location.href='/board/delete/<%=btname[0].board_id%>/<%=btname[0].type_id%>/<%=btname[0].p_id%>';if(confirm('정말로 삭제하시겠습니까?')==false){return false}">삭제</button>
		<%}%>
    </div>
 <% }%>
</div>
